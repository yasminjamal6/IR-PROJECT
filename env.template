# The Watch Configuration
# Copy this file to .env and fill in your credentials

# Telegram API (https://my.telegram.org)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+972xxxxxxxxx
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Google API (https://console.cloud.google.com/apis/credentials)
# Enable: Generative Language API, Geocoding API, Places API
GOOGLE_API_KEY=your-google-api-key-here

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_COLLECTION_NAME=the_watch_incidents

# System Configuration
RISK_RADIUS_KM=2.0
RISK_TIME_WINDOW_DAYS=30
RECENT_EVENT_HOURS=24
SEVERITY_WEIGHT_RECENT=2.0
LOG_LEVEL=INFO
